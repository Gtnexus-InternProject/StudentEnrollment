extends ../layout

block content
    h1.
        #{title}
    form#formAddAdmin(name="addadmin",method="post",action="/admins")

        p First Name:
            input#inputfirstName(type="text", name="firstName")
        p Last Name:
            input#inputUserName(type="text", name="lastName")
        p Username:
            input#inputUserName(type="text", name="userName")
        p Password:
            input#inputUserName(type="text", name="password")
        p Email:
            input#inputUserName(type="text", name="email")
        p Address:
            input#inputUserName(type="text", name="adddress")
        p Contact Number:
            input#inputBadge(type="number", placeholder="ex. 123456", name="contactNumber")
        p User Level:
            input#inputBadge(type="number",placeholder="ex. 1 or 2 or 3", name="userLevel")
        p
            button#btnSubmit(type="submit") submit
