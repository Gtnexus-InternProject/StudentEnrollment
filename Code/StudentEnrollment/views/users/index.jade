extends ../layout

block content
    h1.
         #{title}
    ul
        - each admin, i in users
            li
                = admin.userId
                = admin.userName
                = admin.firstName
                = admin.lastName
                = admin.password
                = admin.adddress
                = admin.contactNumber
                = admin.userLevel
                form(action='/users/#{admin.userId}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p
                    a(href='/users/#{admin.userId}/edit') Edit
                p
                    a(href='/users/#{admin.userId}') Show
